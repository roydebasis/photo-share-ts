{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "target": "ES2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*.ts", "knexfile.ts"],
  "exclude": ["node_modules", "dist"]
}
